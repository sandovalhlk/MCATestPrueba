@model SistContabilidadMCA.Models.RecoveryPasswordViewModel

@{
    ViewBag.Title = "RecoveryPassword";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}



@if (ViewBag.exitoso != null)
{
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        <p><strong>@ViewBag.exitoso!</strong></p>
        <h4><a href="@Url.Action("Login", "Account")"><i class="fa fa-hand-o-right" aria-hidden="true"></i> Click aquí para iniciar sesión</a></h4>
    </div>
}

else
{
    <section class="login-form">
        @using (Html.BeginForm("RecoveryPassword", "Account", new { }, FormMethod.Post, new { @class = "", role = "login", autocomplete = "off", @id = "formLoging" }))
        {
            @Html.AntiForgeryToken()
            <div class="login-box card">
                <div class="card-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-xs-12 text-center">
                                <div class="user-thumb text-center">
                                    <div class="form-group">
                                        <div class="col-xs-12 text-center">
                                            <div class="user-thumb text-center">
                                                @*<img src="~/Content/img/logoSist.png" width="45%" height="50%" />*@
                                                <img src="~/Content/img/LogoMCA_1_1._2.png" width="60%" height="150%" />
                                            </div>
                                        </div>
                                    </div>
                                    <h3><i class="" style="font-size:2em"></i> Sistema Contable MCA</h3>
                                    <br />
                                    <h4 style="color:#000; text-align: center; font-weight: bold;">Solicitud de contraseña</h4>
                                    <p style="color:#000; text-align: center; font-weight: bold;">Escriba su correo electrónico</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(m => m.EmailUser, new { @class = "form-control input-lg", placeholder = "Correo electrónico" })
                                <span class="glyphicon glyphicon-envelope"></span>
                                @Html.ValidationMessageFor(m => m.EmailUser)
                            </div>
                        </div>
                        @if (ViewBag.errorEmail != null)
                        {
                            <br />
                            <div class="alert alert-danger">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                                <strong>@ViewBag.errorEmail!</strong>
                            </div>
                            <br />
                        }
                        <button type="submit" name="go" class="btn btn-lg btn-block btn-success">Enviar solicitud</button>
                        <section>
                            <a href="@Url.Action("Login", "Account", new { Area = "" })">Retornar a Inicio de Sesión</a>
                        </section>
                    </div>
                </div>
            </div>

        }
    </section>
}

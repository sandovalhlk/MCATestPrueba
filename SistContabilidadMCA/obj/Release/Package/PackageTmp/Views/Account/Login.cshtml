@using SistContabilidadMCA.Models
@model LoginViewModel
@{
    ViewBag.Title = "Inicio de Sesión - Sistema de Contabilidad MCA";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@section styles{
    <style>
        .cajaBlanca {
            border-radius: 20px;
            border: 2px solid #607D8B;
        }
    </style>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    @*@if (ViewBag.error != null)
    {
        @Html.Partial("_Alert", new AlertType() { mensaje = ViewBag.error, showBlockJS = true, showAlertJS = true, type = AlertType.TypeAlert.danger })
    }*@
}


@using (Html.BeginForm("Login", "Account", new { }, FormMethod.Post, new { @class = "login-form", role = "form", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <div class="login-box card">
        <div class="card-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 text-center">
                        <div class="user-thumb text-center">
                            @*<img src="~/Content/img/logoSist.png" width="45%" height="50%" />*@                        
                            <img src="~/Content/img/LogoMCA_1_1._2.png" width="60%" height="150%" />
                        </div>
                    </div>
                </div>
                <h4 class="box-title m-b-20" style="text-align:center">Iniciar sesión</h4>
                <div class="form-group ">
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre de usuario", autocomplete = "off", title = "Escriba su nombre de usuario" } })
                        @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-password form-control", placeholder = "Contraseña", autocomplete = "off", title = "Escriba su contraseña" })
                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-info btn-block btn-flat" title="Pulsa aquí para Iniciar sesión">Ingresar</button>
                    </div>
                    @if (ViewBag.error != null)
                    {
                        <br />
                        <div class="alert alert-danger">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                            <strong>@ViewBag.error!</strong>
                        </div>
                    }

                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        <a href="@Url.Action("RecoveryPassword", "Account", new { area = "" })" class="text-center" title="Si olvidastes tu contraseña, pulsa aquí">¿Olvidó su contraseña?</a>
                        <br />
                        <span>El acceso no autorizado o la divulgación de información sensible puede resultar en medidas disciplinarias o legales.</span>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <p style="text-align:center">Copyright ©<strong>Sistema Contable MCA</strong>. Reservados todos los derechos.</p>
}


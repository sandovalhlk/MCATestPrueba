
@{
    ViewBag.Title = "ReversionCierre";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


@section scripts{
    <script src="~/Areas/ContabilidadMCA/Scripts/Cuentas/RevertirCierre.js"></script>
}

@if (User.IsInRole("ADMIN-MCA"))
{
    using (Html.BeginForm(null, null, FormMethod.Post, new { area = "", id = "formReversionCierres" }))
    {
        @Html.AntiForgeryToken()
        @*<input type="hidden" id="ultimoCierre" value=@ViewBag.ultimoCierre />*@
        <div class="container-fluid">
            <div style="padding-top:1em;">

                <div class="row">
                    <div class="col-md-12">
                        @*<div class="card " style="margin-bottom: 0px;">*@
                            <div class="card-header card-outline-naranja" style="background-color:#346cb0; width:100%">
                                <h5 class="m-b-0 text-white">SELECCIONES HASTA QUE ASENTAMIENTO QUIERE REALIZAR LA REVERSION</h5>
                            </div>
                            <div class="card card-body" style="padding-bottom: 40px;padding-top: 40px;">
                              
                                <div class="row">
                                    @*<div class="col-md-12">*@
                                    <div class="col-md-6" style="padding-left: 0px;">
                                        <div class="form-group">
                                            <label class="text-blue "> Seleccione el MCA </label>
                                          
                                                @Html.DropDownList("moduloMCAId", ViewBag.SelectMCA as SelectList, "***Seleccione una Opcion***", htmlAttributes: new { @class = "form-control modificacion", @readonly = "readonly", @required = "required", @data_val = "true", @data_val_required = "Campo Requerido" })
                                          
                                        </div>
                                    </div>
                @*<div class="form-group">*@
                                        <div class="col-md-6" style="padding-left: 0px;">
                                            <div class="form-group">
                                                <label class="text-blue ">Defina el mes de inicio de la reversión</label>

                                                @*@Html.DropDownList("cierreId", ViewBag.cierres as SelectList, "***Seleccione una Opcion***", htmlAttributes: new { @style = "width: 300px;", @class = "form-control modificacion", @readonly = "readonly", @required = "required", @data_val = "true", @data_val_required = "Campo Requerido" })*@
                                                <select class="form-control" id="cierreId" style="width:100%"></select>
                                            </div>
                                        </div>
                                        @*</div>*@
                                    </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="text-blue ">Ingrese la razon de la reversión</label>
                                            <div class="col-md-12" style="padding-left: 0px;">
                                                <textarea class="form-control" id="razonReversion" required="required" style="width:100%"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">

                                 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4" style="padding-top: 20px;">
                                                <button id="btnCancel" class="btn btn-md btn-inverse waves-effect waves-light" type="button">Cancelar</button>
                                                </div>
                                                <div class="col-md-6" style="padding-top: 20px;">
                                                <button id="btnReversionCierre" class="btn btn-md btn-info waves-effect waves-light" type="button">Revertir Asentamiento</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*</div>*@
    }

}
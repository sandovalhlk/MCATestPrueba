@model SistContabilidadMCA.Models.ChangePasswordAccountModelsView

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/Personal/homeIndex.js"></script>

@if (ViewBag.exito == null)
{

    if (ViewBag.error != null)
    {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            <strong>@ViewBag.error!</strong>
        </div>
    }
    @*<input type="hidden" id="rolActual" value="@ViewBag.rol" />*@
    <div class="container-fluid">
        <div style="padding-top:1em;">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-outline-naranja">
                            <h5 class="m-b-0 text-white">Cambio de Contraseña</h5>
                        </div>
                        <div class="card-body">
                            <div>
                                <img src="~/Content/Plantilla_MaterialPro/images/users/usuariolock.png" class="panel_header_img" height="20%" width="20%" />
                            </div>
                            <div class="col-md-12" style="padding-bottom:60px">

                                @using (Ajax.BeginForm("ChangePassword", "Account", null, new AjaxOptions { HttpMethod = "Post" }, new { @class = "form-horizontal", autocomplete = "off", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" id="rolActual" value="@ViewBag.rol" />
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Contraseña actual:<span class="field_requered">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessageFor(model => model.OldPassword)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Nueva contraseña:<span class="field_requered">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.NewPassword)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Confirmar nueva contraseña:<span class="field_requered">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                        </div>
                                    </div>

                                    <div class="col-sm-offset-4 col-sm-8">
                                        <input type="submit" value="Guardar" class="btn btn-primary" />
                                        <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-success">Cancelar</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <br />
                    <br />
                    <h1 style="visibility:hidden">asdasdsad</h1>
                    <div class="alert alert-success">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close"></a>
                        <strong>@ViewBag.exito!</strong>
                    </div>



}
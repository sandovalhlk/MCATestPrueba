
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
@section scripts {
<script src="~/Areas/AdministracionMCA/Script/ModulosMCA/index.js"></script>
}
@if (User.IsInRole("PROMOTOR"))
{
    using (Html.BeginForm(null, null, FormMethod.Post, new { area = "", id = "formIndexMCA" }))
    {
<input id="ucrId"  type="hidden" value="" />
<div class="container-fluid">
    <div style="padding-top:1em;">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-outline-naranja">
                        <h5 class="m-b-0 text-white">Administración de Módulos MCA</h5>
                    </div>
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="col-md-12" style="padding-bottom:60px">

                                @Html.ActionLink("Crear MCA", "CreateMCA", "ModuloMCA", new { @class = "btn btn-info pull-right" })
                            </div>
                            <div id="ViewGeneral" class="row" style="margin-left:100px">
                                <div class="col-md-12">
                                    <div class="col-md-12">
                                        <div class="row">
                                            @if (ViewBag.ucrs == 1)
                                            {
                                            <div class="col-md-4">
                                                <div class="row el-element-overlay">
                                                    <div class="card">
                                                        <div class="el-card-item">
                                                            <div class="el-overlay-1">
                                                                <img src="~/Content/img/bm2.png" alt="user" />
                                                                <div class="el-overlay">
                                                                    <ul class="el-info">
                                                                        <li><input id="UcrBM" type="button" class="btn btn-warning" value="Ver Listado" /></li>                                                                        
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                           
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                            else if (ViewBag.ucrs == 2)
                                            {
                                            <div class="col-md-4">

                                                <div class="row el-element-overlay">
                                                    <div class="card">
                                                        <div class="el-card-item">
                                                            <div class="el-overlay-1">
                                                                <img src="~/Content/img/bcie.png" alt="user" />
                                                                <div class="el-overlay">
                                                                    <ul class="el-info">
                                                                        <li><input id="UcrBCIE" type="button" class="btn btn-warning" value="Ver Listado" /></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                          
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                            else if (ViewBag.ucrs == 3)
                                            {
                                            <div class="col-md-4">

                                                <div class="row el-element-overlay">
                                                    <div class="card">
                                                        <div class="el-card-item">
                                                            <div class="el-overlay-1">
                                                                <img src="~/Content/img/rv.png" alt="user" />
                                                                <div class="el-overlay">
                                                                    <ul class="el-info">
                                                                        <li><input id="UcrRV" type="button" class="btn btn-warning" value="Ver Listado" /></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                         
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p id="divucr1" style="display:none"><b>Listado de Módulos de la UCR - @ViewBag.ucr</b></p>
                        <div class="card-body">
                            <div id="ViewListaMCA" class="row">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
}
}else{
<div>
    <h1>ACCESO NO AUTORIZADO. NO TIENE PERMISOS PARA ACCEDER A ESTA PANTALLA</h1>
</div>
}
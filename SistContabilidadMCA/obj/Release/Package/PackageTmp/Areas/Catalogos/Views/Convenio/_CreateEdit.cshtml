@using BusinessLogicMCA
@model DataLayerMCA.Convenios


<div id="ModalConvenio" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">

    <div class="modal-dialog modal-lg  modalRedondo" id="ModalConvenioTamaño">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color:#346cb0">
                <div style="display:none" id="divEdicion">
                    <h6 class="modal-title" style="color:#fff"><i class="mdi mdi-reorder-horizontal"></i>&nbsp;&nbsp;Edición de los datos del Convenio</h6>
                </div>

                <div style="display:block" id="divNuevo">
                    <input type="hidden" name="convenioId" id="convenioId" value="0" />
                    <h6 class="modal-title" style="color:#fff"><i class="mdi mdi-reorder-horizontal"></i>&nbsp;&nbsp;Nuevo Convenio</h6>
                </div>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label class="control-label">Convenio</label>
                                <input id="convenio" name="convenio" class="form-control" placeholder="nombre del Convenio" type="text"  maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-1" style="display:none" id="divBaja">
                            <label class="control-label">Opción</label>
                            <button type="button" class="btn waves-effect waves-light btn-sm btn-danger" onclick="return fnBajaData()"> <i class="mdi mdi-sim-off"></i> Anular</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-corres1"><i class="fa fa-save"></i> Guardar</button>
                <button type="button" class="btn btn-inverse" onclick="return fncloseModal();"><i class="mdi mdi-close-circle"></i> Cancelar</button>
            </div>
        </div>
    </div>
</div>

